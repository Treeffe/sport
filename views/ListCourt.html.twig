{% extends "layout.html.twig" %}

{% block title %}Liste des terrain{% endblock %}

{% block content %}

    <div style="margin-top: 5%">
        <h2 class="text-center">{{ block('title') }}</h2>
    </div>

    <div>
        {% if courts %}
            <div class="table-responsive">
                <table class="table table-hover table-condensed">
                    <thead>
                    <tr>
                        <th>Image</th>
                        <th>adresse</th>
                        <th>Description</th>
                        <th>Sports</th>
                    </tr>
                    </thead>
                    {% for court in courts %}
                        <tr>
                            <td>{{ court.imageCourt }}</td>
                            <td>
                                {{ court.court.numeroRueCourt }} {{ court.court.rueCourt }} {{ court.court.cpCourt }} {{ court.court.villeCourt }}
                            </td>
                            <Sport>{{ court.sport.libelleSport }}</Sport>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        {% else %}
            <div class="alert alert-warning">Aucun Terrain de sport trouv√©.</div>
        {% endif %}
    </div>
{% endblock %}