{% extends "layout.html.twig" %}

{% block title %}TEST DOCTINE2{% endblock %}

{% block content %}

    <div style="margin-top: 5%">
        <h2 class="text-center">{{ block('title') }}</h2>
    </div>

    <div>
        {% if catSports %}
            <div class="table-responsive">
                <table class="table table-hover table-condensed">
                    <thead>
                    <tr>
                        <th>Libelle</th>
                        <th>Lien</th>
                    </tr>
                    </thead>
                    {% for catSport in catSports %}
                        <tr>
                            <td>{{ catSport.libelleCatSport }}</td>
                            <td><a href="{{ app.request.basepath }}/CatSport/{{ catSport.idCatSport }} "> {{ catSport.libelleCatSport }}</a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        {% else %}
            <div class="alert alert-warning">Aucune categorie trouv√©e.</div>
        {% endif %}
    </div>
{% endblock %}