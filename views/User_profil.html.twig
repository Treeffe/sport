{% extends 'layout.html.twig' %}
{% set adminMenu = true %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}

{% for flashMessage in app.session.flashbag.get('danger') %}
<div class="alert alert-danger">
    {{ flashMessage }}
</div>
{% endfor %}


<div class="well">
{{ form_start(userType, { 'attr': {'class': 'form-horizontal'} }) }}
	<div class="form-group">
        {{ form_label(userProfil.nom, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(userProfil.nom) }}
            {{ form_widget(userProfil.nom, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
	<div class="form-group">
        {{ form_label(userProfil.prenom, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(userProfil.prenom) }}
            {{ form_widget(userProfil.prenom, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(userProfil.adresse, 'Adresse', { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-2">
            {{ form_errors(userProfil.adresse) }}
            {{ form_widget(userProfil.adresse, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(userProfil.cp, 'Code postal', { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(userProfil.cp, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(userProfil.ville, 'Ville', { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(userProfil.ville, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-3">
            <input type="submit" class="btn btn-primary" value="soumettre" />
        </div>
    </div>
{{ form_end(userType) }}
</div>
{% endblock %}